[flake8]
ignore = D203, E402, W503, E203, E741, E266, E731, E501
# remove 821 and 841 again later
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    /preprocessing/src/config.py,
    /docker,
    /Orig-Metrics,
    /notebooks,

max-line-length = 180
